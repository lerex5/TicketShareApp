<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lerex.tr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:enabled="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ticklogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustNothing">
        <activity android:name=".CostDetails"></activity>
        <activity android:name=".BasicTicketDetails" />
        <activity android:name=".LocationActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FragHome"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".accountActivity" />
        <activity
            android:name=".buyerActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".addTickets" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".sellActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".YourTickets" />
    </application>

</manifest>
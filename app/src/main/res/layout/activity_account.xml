<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acctLa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#335F5F5F"
    tools:context=".accountActivity">

    <TextView
        android:id="@+id/tealView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#5CE1E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/TicLogo"
        android:layout_width="115dp"
        android:layout_height="62dp"
        android:src="@drawable/ticklogowhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/montserrat"
        android:text="@string/log_out"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/LocSpace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/TicSpace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocSpace"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvMyLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/your_location"
        android:textColor="#555454"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/LocSpace"
        app:layout_constraintEnd_toEndOf="@+id/LocSpace"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LocSpace"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/curCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/LocSpace"
        app:layout_constraintEnd_toEndOf="@+id/LocSpace"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/LocSpace"
        app:layout_constraintTop_toBottomOf="@+id/tvMyLoc"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/viewTickets"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/arrow"
        android:backgroundTint="#646464"
        app:layout_constraintBottom_toBottomOf="@+id/TicSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/TicSpace"
        app:layout_constraintTop_toBottomOf="@+id/LocSpace" />

    <Button
        android:id="@+id/chngLocation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/arrow"
        android:backgroundTint="#646464"
        app:layout_constraintBottom_toBottomOf="@+id/LocSpace"
        app:layout_constraintEnd_toEndOf="@+id/LocSpace"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/LocSpace"
        app:layout_constraintTop_toTopOf="@+id/LocSpace" />

    <TextView
        android:id="@+id/tvMyTic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/your_tickets"
        android:textColor="#555454"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/TicSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/TicSpace"
        app:layout_constraintTop_toBottomOf="@+id/LocSpace"
        app:layout_constraintVertical_bias="0.526" />

</androidx.constraintlayout.widget.ConstraintLayout>


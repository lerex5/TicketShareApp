<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lerex.tr.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:id="@+id/username"
        android:hint="@string/e_u"
        android:autofillHints="@string/e_u"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:id="@+id/phone_number"
        android:autofillHints="@string/e_ph"
        android:hint="@string/e_ph"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="@id/username"
        tools:targetApi="o" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:id="@+id/e_add"
        android:autofillHints="@string/e_ad"
        android:hint="@string/e_ad"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@id/phone_number"
        tools:targetApi="o" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:id="@+id/sign_up"
        android:text="@string/sign_up"
        app:layout_constraintTop_toTopOf="@id/e_add"
        tools:targetApi="o"
        style="?android:attr/borderlessButtonStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>